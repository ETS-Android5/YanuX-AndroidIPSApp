<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.example.findlocation">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".activities.trilateration.TrilaterationScreenActivity"
            android:parentActivityName=".activities.ui.MainPageActivity" />
        <activity
            android:name=".activities.proximity.ProximityOnlineActivity"
            android:parentActivityName=".activities.proximity.ProximityScreenActivity" />
        <activity
            android:name=".activities.proximity.ProximityDistanceScanActivity"
            android:parentActivityName=".activities.proximity.ProximityScreenActivity" />
        <activity
            android:name=".activities.proximity.ProximityScreenActivity"
            android:parentActivityName=".activities.ui.MainPageActivity" />
        <activity
            android:name=".activities.fingerprinting.FingerprintingOnlineActivity"
            android:parentActivityName=".activities.fingerprinting.FingerprintingScreenActivity" />
        <activity
            android:name=".activities.fingerprinting.FingerprintingOfflineActivity"
            android:parentActivityName=".activities.fingerprinting.FingerprintingScreenActivity" />
        <activity
            android:name=".activities.fingerprinting.FingerprintingScreenActivity"
            android:parentActivityName=".activities.ui.MainPageActivity" />
        <activity
            android:name=".activities.sensors.GraphicalSensorInformationActivity"
            android:parentActivityName=".activities.ui.MainPageActivity" />
        <activity
            android:name=".activities.sensors.SensorInformationActivity"
            android:parentActivityName=".activities.ui.MainPageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ui.MainPageActivity" />
        </activity>
        <activity android:name=".activities.ui.MainPageActivity" />
        <activity
            android:name=".activities.ui.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>